{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "allowJs": false
    },
    "include": [
      "src/*"
    ],
    "exclude": [
        "node_modules",
        "./dist/**/*",
        "dist"
    ]
}
